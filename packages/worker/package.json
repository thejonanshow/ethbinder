{
  "name": "worker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "test": "vitest",
    "cf-typegen": "wrangler types",
    "test:worker": "cd worker && yarn test",
    "test:worker:mutation": "cd worker && ../../scripts/stryker-helper.sh",
    "test:worker:unit": "cd worker && yarn test --testPathPattern=unit",
    "test:worker:integration": "cd worker && yarn test --testPathPattern=integration",
    "test:worker:all": "yarn test:worker:unit && yarn test:worker:integration && yarn test:worker:mutation && yarn test:worker:e2e && yarn test:worker:regression && yarn test:worker:performance && yarn test:worker:security && yarn test:worker:a11y && yarn test:worker:snapshot",
    "test:worker:e2e": "cd worker && yarn cypress run",
    "test:worker:regression": "cd worker && yarn visual-regression",
    "test:worker:performance": "cd worker && yarn lighthouse",
    "test:worker:security": "cd worker && yarn security-test",
    "test:worker:a11y": "cd worker && yarn axe-run",
    "test:worker:smoke": "cd worker && yarn test --testPathPattern=smoke",
    "test:worker:snapshot": "cd worker && yarn test --updateSnapshot",
    "test:unit": "jest --testMatch=\"**/__tests__/**/*.test.[jt]s?(x)\"",
    "test:integration": "jest --testMatch=\"**/__tests__/**/*.spec.[jt]s?(x)\"",
    "test:mutation": "jest --config=stryker.conf.json",
    "test:e2e": "cypress run",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:mutation && yarn test:e2e"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.4.5",
    "@cloudflare/workers-types": "^4.20240909.0",
    "@lavamoat/allow-scripts": "^3.2.1",
    "@lavamoat/preinstall-always-fail": "^2.1.0",
    "lavamoat": "^9.0.1",
    "typescript": "^5.5.2",
    "vitest": "1.5.0",
    "wrangler": "^3.60.3"
  },
  "dependencies": {
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/keccak256": "^5.7.0",
    "@ethersproject/strings": "^5.7.0",
    "@ethersproject/transactions": "^5.7.0",
    "@ethersproject/wallet": "^5.7.0"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "vitest>vite>esbuild": false,
      "wrangler>esbuild": false,
      "wrangler>workerd": false
    }
  }
}
