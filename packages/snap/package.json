{
  "name": "snap",
  "version": "0.1.0",
  "description": "The 'Hello, world!' of MetaMask Snaps, now written in TypeScript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/template-snap-monorepo.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "main": "./dist/bundle.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "allow-scripts": "yarn workspace root allow-scripts",
    "build": "mm-snap build",
    "build:clean": "yarn clean && yarn build",
    "clean": "rimraf dist",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' --ignore-path .gitignore",
    "prepublishOnly": "mm-snap manifest",
    "serve": "mm-snap serve",
    "start": "mm-snap watch",
    "test": "jest",
    "test:snap": "cd snap && yarn test",
    "test:snap:mutation": "cd snap && ../../scripts/stryker-helper.sh",
    "test:snap:unit": "cd snap && yarn test --testPathPattern=unit",
    "test:snap:integration": "cd snap && yarn test --testPathPattern=integration",
    "test:snap:all": "yarn test:snap:unit && yarn test:snap:integration && yarn test:snap:mutation && yarn test:snap:e2e && yarn test:snap:regression && yarn test:snap:performance && yarn test:snap:security && yarn test:snap:a11y && yarn test:snap:snapshot",
    "test:snap:e2e": "cd snap && yarn cypress run",
    "test:snap:regression": "cd snap && yarn visual-regression",
    "test:snap:performance": "cd snap && yarn lighthouse",
    "test:snap:security": "cd snap && yarn security-test",
    "test:snap:a11y": "cd snap && yarn axe-run",
    "test:snap:smoke": "cd snap && yarn test --testPathPattern=smoke",
    "test:snap:snapshot": "cd snap && yarn test --updateSnapshot",
    "test:unit": "jest --testMatch=\"**/__tests__/**/*.test.[jt]s?(x)\"",
    "test:integration": "jest --testMatch=\"**/__tests__/**/*.spec.[jt]s?(x)\"",
    "test:mutation": "jest --config=stryker.conf.json",
    "test:e2e": "cypress run",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:mutation && yarn test:e2e"
  },
  "dependencies": {
    "@metamask/snaps-sdk": "^6.1.1",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@metamask/auto-changelog": "^3.4.4",
    "@metamask/eslint-config": "^12.2.0",
    "@metamask/eslint-config-jest": "^12.1.0",
    "@metamask/eslint-config-nodejs": "^12.1.0",
    "@metamask/eslint-config-typescript": "^12.1.0",
    "@metamask/snaps-cli": "^6.2.1",
    "@metamask/snaps-jest": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jest": "^27.1.5",
    "eslint-plugin-jsdoc": "^41.1.2",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "prettier": "^2.7.1",
    "prettier-plugin-packagejson": "^2.2.11",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=18.6.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
